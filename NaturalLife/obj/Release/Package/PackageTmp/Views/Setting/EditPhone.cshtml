@model IQueryable<NaturalLife.Models.NTL_About>
@{
    ViewBag.Title = "EditPhone";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa SĐT</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa SĐT</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/setting/editphone" method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Số điện thoại 1 (VUI LÒNG NHẬP DƯỚI 15 KÍ TỰ)</label>
                                            <input type="text" class="form-control" maxlength="15" placeholder="" name="phone1" value="@Model.FirstOrDefault().Phone01">
                                        </div>
                                    </div>
                                   
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Số điện thoại 2 (VUI LÒNG NHẬP DƯỚI 15 KÍ TỰ)</label>
                                            <input type="text" class="form-control" maxlength="15" placeholder="" name="phone2" value="@Model.FirstOrDefault().Phone02">
                                        </div>
                                    </div>            

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="exampleFormControlInput4">Số điện thoại 3 (VUI LÒNG NHẬP DƯỚI 15 KÍ TỰ)</label>
                                            <input type="text" class="form-control" maxlength="15" placeholder="" name="phone3" value="@Model.FirstOrDefault().Phone03">
                                        </div>
                                    </div>
                                    
                                </div>
                                                     
                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

