<main id="main">
    <!-- top information area -->
    <div class="inner-top">
        <div class="container">
            <h1 class="inner-main-heading">Đăng nhập</h1>
            <!-- breadcrumb -->
            <nav class="breadcrumbs">
                <ul>
                    <li><a href="/home/index">Trang chủ</a></li>
                    <li><span>Đăng nhập</span></li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="inner-main common-spacing container">
        <!-- form -->
        <form class="twocol-form" action="#">
            <div class="row">
                <div class="col-md-6">
                    <div class="top-box">
                        <span class="holder height">ĐĂNG NHẬP</span>
                    </div>
                    <div class="form-holder">
                        <div class="wrap">
                            <div class="hold">
                                <label for="uname">Email</label>
                                <input type="email" id="uname" class="form-control">
                            </div>
                            <div class="hold">
                                <label for="pass">Mật khẩu</label>
                                <input type="password" id="pass" class="form-control">
                            </div>
                            <div class="btn-hold">
                                <button type="submit" class="btn btn-default">Đăng nhập</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="top-box">
                        <span class="holder height">ĐĂNG KÝ</span>
                    </div>
                    <div class="form-holder">
                        <div class="wrap">
                            <div class="hold">
                                <label for="name">Họ tên</label>
                                <input type="text" id="name" class="form-control">
                            </div>
                            <div class="hold">
                                <label for="uname1">Số điện thoại</label>
                                <input type="text" id="uname1" class="form-control">
                            </div>
                            <div class="hold">
                                <label for="email">Email</label>
                                <input type="email" id="email" class="form-control">
                            </div>
                            <div class="hold">
                                <label for="reg-pass">Mật khẩu</label>
                                <input type="password" id="reg-pass" class="form-control">
                            </div>
                            <div class="btn-hold">
                                <button type="submit" class="btn btn-default">Đăng ký</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>