@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<NaturalLife.Models.NTL_Room>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách Phòng</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start table basic -->
        <div class="basic-table">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-table">
                        <div class="section-head">
                            <div class="title">
                                <h4>Danh sách Phòng</h4>
                            </div>
                            <div class="align-self-center">
                                <a class="btn btn-success" href="/roommaster/add">Thêm</a>
                            </div>
                        </div>
                        <div class="section-body">
                            <div class="table-responsive">
                                <table class="table table-hover progress-table text-white text-center" border="0" style="border-width:0px;border-style:None;border-collapse:collapse;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tên phòng</th>
                                            <th>Giá</th>
                                            <th>Hình ảnh</th>
                                            <th></th>
                                            <th>Xoá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td><a href="/webmaster/editproduct/@item.ID">@item.RoomName</a></td>
                                                <td>@string.Format("{0:n0}", item.Price)</td>
                                                <td>@item.Avatar</td>
                                                @if (item. != null)
                                                {
                                                    if (item.Description.Count() > 25)
                                                    {
                                                        <td>@item.Description.Substring(0, 25)</td>
                                                    }
                                                    else
                                                    {
                                                        <td></td>
                                                    }
                                                }
                                                else
                                                {
                                                    <td></td>
                                                }
                                                <td>@item.Avatar</td>
                                                <td>@item.Images</td>
                                                @*<td><input type="checkbox" /></td>*@
                                                <td><a href="/webmaster/deleteproduct/@item.ID"><img src="~/Images/icon/if_f-cross_256_282471.png" /></a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="pagination-total-pages">
                                    <div class="pagination-style">
                                        <strong style="margin: 12px;"> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</strong>
                                        @Html.PagedListPager(Model, page => Url.Action("ListProduct", new { page }))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



