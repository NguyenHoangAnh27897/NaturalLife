                        <li>
                            <div class="info-left">
                                <strong class="title">Tiện ích</strong>
                                <span class="value">Số Lượng</span>
                            </div>
                            <div class="info-right" ng-controller="utilities">
                                <ul class="ico-list">
                                    <li ng-repeat="item in icons">
                                        <i class="fa fa-{{ item.icon }}" aria-hidden="true"></i>
