                        {
                            @Html.Raw(Model.FirstOrDefault().Room.FirstOrDefault().Description.Substring(0, 500)) <a href="#description">... Xem thêm</a>
                        }
                        else
                        {@Html.Raw(Model.FirstOrDefault().Room.FirstOrDefault().Description)}
