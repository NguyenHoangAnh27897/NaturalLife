@model IQueryable<NaturalLife.Models.NTL_Main>
@{
    ViewBag.Title = "EditMain";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa trang chủ</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa nội dung trang chủ</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/homepage/editmain" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề dịch vụ (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="50" placeholder="" name="title01" value="@Model.FirstOrDefault().Title01">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Nội dung dịch vụ</label>
                                    <textarea name="main01">@Model.FirstOrDefault().Content01</textarea>
                                </div>

                                @if (Model.FirstOrDefault().Image01 != null)
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Thay đổi hình dịch vụ (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1000x800 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="image1" accept="image/*" multiple="multiple" />
                                        <div class="row">
                                            <div class="col-sm-3 bg-slider" style="background: url('../../Images/website/imagehome/@Model.FirstOrDefault().Image01') center center no-repeat / cover;">
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Thay đổi hình dịch vụ (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1000x800 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="image1" accept="image/*" multiple="multiple" />
                                    </div>
                                }

                                <hr style="background-color: #ced4da;" />

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề hoạt động (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="50" placeholder="" name="title02" value="@Model.FirstOrDefault().Title02">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Nội dung hoạt động</label>
                                    <textarea name="main02">@Model.FirstOrDefault().Content02</textarea>
                                </div>

                                @if (Model.FirstOrDefault().Image02 != null)
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Thay đổi hình hoạt động (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1000x800 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="image2" accept="image/*" multiple="multiple" />
                                        <div class="row">
                                            <div class="col-sm-3 bg-slider" style="background: url('../../Images/website/imagehome/@Model.FirstOrDefault().Image02') center center no-repeat / cover;">
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Thay đổi hình hoạt động (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1000x800 HOẶC LỚN HƠN)</label>
                                        <br />
                                        <input type="file" name="image2" accept="image/*" multiple="multiple" />
                                    </div>
                                }

                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('main01');
    CKEDITOR.replace('main02');
</script>