                <strong class="main-subtitle">Dịch vụ tuyệt vời!</strong>
                <div class="seperator"></div>
            </header>
            <div id="two-columns" class="row">
                <div id="content" class="col-sm-8 col-md-9">
                    <div class="content-holder content-sub-holder">
                        <div id="party" class="row db-3-col tab-pane fade in active">
                            @foreach (var item in Model)
                            {

                                <article class="col-md-6 col-lg-4 article has-hover-s1 thumb-full">
                                    <div class="thumbnail">
                                        <div class="img-wrap">
                                            <img src="~/Images/website/imageservice/@item.Avatar" height="228" width="350" alt="image description">
                                        </div>
                                        <h3 class="small-space"><a href="/service/detail/@item.ID">@item.ServiceName</a></h3>
                                        <span class="info">Dịch vụ ăn, tổ chức tiệc</span>
                                        <aside class="meta">
                                            <span class="country">
                                                <span class="icon-family"> </span>3 Người
                                            </span>
                                            <span class="activity">
                                                <span class="icon-acitivities"> </span>6 Hoạt động
                                            </span>
                                        </aside>
                                        @if (item.Description.Length > 50)
                                        {
                                            Html.Raw(item.Description.Substring(0, 100));
                                        }
                                        else
                                        {
                                            Html.Raw(item.Description);
                                        }
                                        <a href="/service/detail/@item.ID" class="btn btn-default">chi tiết</a>
                                        <footer>
                                            <span class="price">Giá: <span>@string.Format("{0:n0}", item.Price)</span></span>
                                            <ul class="social-networks">
                                                <li><a href="#"><span class="icon-twitter"></span></a></li>
                                                <li><a href="#"><span class="icon-google-plus"></span></a></li>
