
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- main banner -->
<section class="banner banner-inner parallax" data-stellar-background-ratio="0.5" id="banner-layout-leftsidebar">
    <div class="banner-text">
        <div class="center-text">
            <div class="container">
                <h1>DỊCH VỤ</h1>
                <strong class="subtitle">Dịch vụ tuyệt vời!</strong>
                <!-- breadcrumb -->
                <nav class="breadcrumbs">
                    <ul>
                        <li><a href="/home/index">Trang chủ</a></li>
                        <li><span>Dịch vụ</span></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- main container -->
<main>
    <!-- content with sidebar -->
    <div class="content-with-sidebar common-spacing">
        <div class="container">
            <div id="two-columns" class="row">
                <div id="content" class="col-sm-8 col-md-9" ng-controller="listService">
                    <div class="content-holder content-sub-holder">
                        <div class="row db-3-col">
                            <ng-container ng-repeat="item in items[3].subService">
                                <article class="col-md-6 col-lg-4 article has-hover-s1 thumb-full">
                                    <div class="thumbnail">
                                        <div class="img-wrap">
                                            <img src="~/Content/NaturalLife/img/room/room-3.jpg" height="228" width="350" alt="image description">
                                        </div>
                                        <h3 class="small-space"><a href="/service/detail">{{ item.name }}</a></h3>
                                        <span class="info">{{  items[0].label }}</span>
                                        <aside class="meta">
                                            <span class="country">
                                                <span class="icon-family"> </span>{{ $index + 2 }} Người
                                            </span>
                                            <span class="activity">
                                                <span class="icon-acitivities"> </span>6 Hoạt động
                                            </span>
                                        </aside>
                                        <p>{{  item.description }}</p>
                                        <a href="/service/detail" class="btn btn-default">chi tiết</a>
                                        <footer>
                                            <span class="price">Giá: <span>2.749.000 VND</span></span>
                                            <ul class="social-networks">
                                                <li><a href="#"><span class="icon-twitter"></span></a></li>
                                                <li><a href="#"><span class="icon-google-plus"></span></a></li>
                                                <li><a href="#"><span class="icon-facebook"></span></a></li>
                                                <li><a href="#"><span class="icon-linkedin"></span></a></li>
                                            </ul>
                                        </footer>
                                    </div>
                                </article>
                            </ng-container>
                        </div>
                    </div>
                    <nav class="pagination-wrap pagination-solid">
                        <div class="btn-prev">
                            <a href="#" aria-label="Previous">
                                <span class="icon-angle-right"></span>
                            </a>
                        </div>
                        <ul class="pagination">
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li class="active"><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li>...</li>
                            <li><a href="#">7</a></li>
                        </ul>
                        <div class="btn-next">
                            <a href="#" aria-label="Previous">
                                <span class="icon-angle-right"></span>
                            </a>
                        </div>
                    </nav>
                </div>
                <!-- sidebar -->
                <aside id="sidebar" class="col-sm-4 col-md-3 sidebar sidebar-list">
                    <div class="sidebar-holder">
                        <header class="heading">
                            <h3>TÌM KIẾM</h3>
                        </header>
                        <!-- accordion filters in sidebar -->
                        <div class="accordion">
                            <div class="accordion-group">
                                <div class="panel-heading">
                                    <h4 class="panel-title">
                                        <a role="button" data-toggle="collapse" href="#collapse6" aria-expanded="true" aria-controls="collapse6">Loại</a>
                                    </h4>
                                </div>
                                <div id="collapse6" class="panel-collapse collapse in" role="tabpanel">
                                    <div class="panel-body">
                                        <strong class="title">Chọn loại</strong>
                                        <ul class="side-list check-list" ng-controller="listServiceChk">
                                            <li ng-repeat="item in items">
                                                <label for="check1" class="custom-checkbox">
                                                    <input id="check1" type="checkbox" ng-model="checkboxModel[$index].value">
                                                    <span class="check-input"></span>
                                                    <span class="check-label">{{ item }}</span>
                                                </label>
                                            </li>
                                        </ul>
                                        <!-- <strong class="sub-link"><a href="#">CAST YOUR VOTE</a></strong> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</main>

