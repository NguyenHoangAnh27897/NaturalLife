@model IQueryable<NaturalLife.Models.NTL_About>
@{
    ViewBag.Title = "About";
}
<!-- main banner -->
<section class="banner banner-inner parallax" data-stellar-background-ratio="0.5" id="about-banner">
    <div class="banner-text">
        <div class="center-text">
            <div class="container hidden-md hidden-lg">
                <br />
                <h1 class="text-center">Câu chuyện</h1>
                <strong class="subtitle text-center">Các chủ đề phiêu lưu chi tiết và hiện đại nhất!</strong>
                <!-- breadcrumb -->
                @*<nav class="breadcrumbs">
                    <ul>
                        <li><a href="/home/index">Trang chủ</a></li>
                        <li><span>Câu chuyện</span></li>
                    </ul>
                </nav>*@
            </div>
        </div>
    </div>
</section>
<!-- main container -->
<main id="main">
    <!-- content block with article -->
    <div class="content-block bg-gray">
        <div class="container">
            <header class="content-heading">
                <h2 class="main-heading">@Model.FirstOrDefault().BigTitle</h2>
                <strong class="main-subtitle">@Model.FirstOrDefault().SubTitle</strong>
                <div class="seperator"></div>
            </header>
            <div class="row">
                <div class="col-sm-6 description-text">
                    <h3>@Model.FirstOrDefault().LeftTitle</h3>
                    <p>@Model.FirstOrDefault().LeftDescription</p>
                   
                </div>
                <div class="col-sm-6 description-text">
                    <h3>@Model.FirstOrDefault().RightTitle</h3>
                    <p>@Model.FirstOrDefault().RightDescription</p>
                </div>
            </div>
        </div>
    </div>
    <!-- services block -->
    <div class="services-block has-bg parallax" id="about-service-block">
        <div class="container">
            <div class="row db-3-col">
                <div class="col-sm-4 ico-article wow fadeInUp" data-wow-duration="400ms" data-wow-delay="200ms">
                    <div class="ico-holder">
                        <span class="@Model.FirstOrDefault().Icon1"></span>
                    </div>
                    <div class="description">
                        <strong class="content-title"><a href="#">@Model.FirstOrDefault().Title1</a></strong>
                        <p>@Model.FirstOrDefault().Description1</p>
                    </div>
                </div>
                <div class="col-sm-4 ico-article wow fadeInUp" data-wow-duration="400ms" data-wow-delay="300ms">
                    <div class="ico-holder">
                        <span class="@Model.FirstOrDefault().Icon2"></span>
                    </div>
                    <div class="description">
                        <strong class="content-title"><a href="#">@Model.FirstOrDefault().Title2</a></strong>
                        <p>@Model.FirstOrDefault().Description2</p>
                    </div>
                </div>
                <div class="col-sm-4 ico-article wow fadeInUp" data-wow-duration="400ms" data-wow-delay="400ms">
                    <div class="ico-holder">
                        <span class="@Model.FirstOrDefault().Icon3"></span>
                    </div>
                    <div class="description">
                        <strong class="content-title"><a href="#">@Model.FirstOrDefault().Title3</a></strong>
                        <p>@Model.FirstOrDefault().Description3</p>
                    </div>
                </div>
                <div class="col-sm-4 ico-article wow fadeInUp" data-wow-duration="400ms" data-wow-delay="500ms">
                    <div class="ico-holder">
                        <span class="@Model.FirstOrDefault().Icon4"></span>
                    </div>
                    <div class="description">
                        <strong class="content-title"><a href="#">@Model.FirstOrDefault().Title4</a></strong>
                        <p>@Model.FirstOrDefault().Description4</p>
                    </div>
                </div>
                <div class="col-sm-4 ico-article wow fadeInUp" data-wow-duration="400ms" data-wow-delay="600ms">
                    <div class="ico-holder">
                        <span class="@Model.FirstOrDefault().Icon5"></span>
                    </div>
                    <div class="description">
                        <strong class="content-title"><a href="#">@Model.FirstOrDefault().Title5</a></strong>
                        <p>@Model.FirstOrDefault().Description5</p>
                    </div>
                </div>
                <div class="col-sm-4 ico-article wow fadeInUp" data-wow-duration="400ms" data-wow-delay="700ms">
                    <div class="ico-holder">
                        <span class="@Model.FirstOrDefault().Icon6"></span>
                    </div>
                    <div class="description">
                        <strong class="content-title"><a href="#">@Model.FirstOrDefault().Title6</a></strong>
                        <p>@Model.FirstOrDefault().Desciption6</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <!-- step block -->
    <div class="step-block text-center parallax" data-stellar-background-ratio="0.3" id="about-step-block">
        <div class="container">
            <blockquote class="normal">
                <q>@Model.FirstOrDefault().Slogan</q>
            </blockquote>
        </div>
    </div>
    <!-- partner list -->
    <article class="partner-block">
        <div class="container">
            <header class="content-heading">
                <h2 class="main-heading">Đối tác</h2>
                <span class="main-subtitle">Những người luôn ủng hộ và ủng hộ công việc tốt của chúng tôi</span>
                <div class="seperator"></div>
            </header>
            <div class="partner-list" id="partner-slide">
                <div class="partner">
                    <a href="#">
                        <img width="130" src="~/Content/NaturalLife/img/logos/company1.jpg" alt="image description">
                        <img class="hover" width="130" src="~/Content/NaturalLife/img/logos/company1.jpg" alt="image description">
                    </a>
                </div>
                <div class="partner">
                    <a href="#">
                        <img width="130" src="~/Content/NaturalLife/img/logos/company2.jpg" alt="image description">
                        <img class="hover" width="130" src="~/Content/NaturalLife/img/logos/company2.jpg" alt="image description">
                    </a>
                </div>
                <div class="partner">
                    <a href="#">
                        <img width="130" src="~/Content/NaturalLife/img/logos/company3.jpg" alt="image description">
                        <img class="hover" width="130" src="~/Content/NaturalLife/img/logos/company3.jpg" alt="image description">
                    </a>
                </div>
                <div class="partner">
                    <a href="#">
                        <img width="130" src="~/Content/NaturalLife/img/logos/company4.jpg" alt="image description">
                        <img class="hover" width="130" src="~/Content/NaturalLife/img/logos/company4.jpg" alt="image description">
                    </a>
                </div>
                <div class="partner">
                    <a href="#">
                        <img width="130" src="~/Content/NaturalLife/img/logos/company5.jpg" alt="image description">
                        <img class="hover" width="130" src="~/Content/NaturalLife/img/logos/company5.jpg" alt="image description">
                    </a>
                </div>
                <div class="partner">
                    <a href="#">
                        <img width="130" src="~/Content/NaturalLife/img/logos/company6.jpg" alt="image description">
                        <img class="hover" width="130" src="~/Content/NaturalLife/img/logos/company6.jpg" alt="image description">
                    </a>
                </div>
            </div>
        </div>
    </article>
</main>
