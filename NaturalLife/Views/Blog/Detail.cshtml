@model IQueryable<NaturalLife.Models.NTL_Blog>
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- main banner -->
<section class="banner banner-inner parallax" data-stellar-background-ratio="0.5" id="blog-single">
    <div class="banner-text">
        <div class="center-text">
            <div class="container text-center hidden-md hidden-lg">
                <h1>Blog Du lịch</h1>
                <strong class="subtitle">Khám phá những điều mới lạ qua những Blog hấp dẫn !</strong>
                <!-- breadcrumb -->
                @*<nav class="breadcrumbs">
                    <ul>
                        <li><a href="/home/index">Trang chủ</a></li>
