            </div>
        </div>
    </div>
</section>
<!-- main container -->
<main id="main">
    <div class="content-with-sidebar common-spacing content-left">
        <div class="container">
            <div id="two-columns" class="row">
                <div id="content" class="col-sm-8 col-md-9">
                    <div class="blog-holder no-pagination">
                        <!-- blog single -->
                        <article class="blog-single">
                            <div class="img-wrap">
                                <img src="~/Images/website/imageblog/@Model.FirstOrDefault().Avatar" height="480" width="870" alt="image description">
                            </div>
                            <div class="description">
                                <h1 class="content-main-heading">@Model.FirstOrDefault().Title</h1>
                                 @Html.Raw(Model.FirstOrDefault().ContentBlog)
                                <footer class="meta-article">
                                    <div class="footer-sub">
                                        <div class="rate-info">
                                            Đăng bởi @Model.FirstOrDefault().CreatedBy
                                        </div>
                                    </div>
                                </footer>
                            </div>
                        </article>
                    </div>
                </div>
