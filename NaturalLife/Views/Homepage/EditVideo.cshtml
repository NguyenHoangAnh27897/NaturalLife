@model IQueryable<NaturalLife.Models.NTL_Video>
@{
    ViewBag.Title = "EditVideo";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa trang chủ</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Chỉnh sửa Video trang chủ</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/homepage/editvideo" method="post" enctype="multipart/form-data">
                                @if (Model.FirstOrDefault().Video != null)
                                {
                                <div class="form-group">
                                    <label for="exampleFormControlFile1">Video hiển thị</label>
                                    <br />
                                    <input type="file" name="video" accept="video/*" />
                                    <video poster="~/Content/NaturalLife/img/logos/Naturallife.png" muted loop autoplay>
                                        <source src="~/Video/@Model.FirstOrDefault().Video" type="video/mp4">
                                        <source src="~/Content/NaturalLife/video/naturalLife.ogg" type="video/ogg">
                                        Your browser does not support the video tag.
                                    </video>
                                </div>
                                    
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label for="exampleFormControlFile1">Video hiển thị</label>
                                        <br />
                                        <input type="file" name="video" accept="video/*" />
                                    </div>
                                }
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Miêu tả thứ nhất (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <textarea class="form-control" name="des1" maxlength="200">@Model.FirstOrDefault().Description01</textarea>
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề thứ nhất (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="100" placeholder="" name="title1" value="@Model.FirstOrDefault().Title01">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề phụ thứ nhất (VUI LÒNG NHẬP DƯỚI 100 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="100" placeholder="" name="Subtitle1" value="@Model.FirstOrDefault().SubTitle01">
                                </div>
                                <hr style="background-color: #ced4da;" />
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Miêu tả thứ hai (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <textarea class="form-control" name="des2" maxlength="200">@Model.FirstOrDefault().Description02</textarea>
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề thứ hai (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="100" placeholder="" name="title2" value="@Model.FirstOrDefault().Title02">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề phụ thứ hai (VUI LÒNG NHẬP DƯỚI 100 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="100" placeholder="" name="Subtitle2" value="@Model.FirstOrDefault().SubTitle02">
                                </div>
                                <hr style="background-color: #ced4da;" />
                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Miêu tả thứ ba (VUI LÒNG NHẬP DƯỚI 200 KÍ TỰ)</label>
                                    <textarea class="form-control" name="des3" maxlength="200">@Model.FirstOrDefault().Description03</textarea>
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề thứ ba (VUI LÒNG NHẬP DƯỚI 50 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="100" placeholder="" name="title3" value="@Model.FirstOrDefault().Title03">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề phụ thứ ba (VUI LÒNG NHẬP DƯỚI 100 KÍ TỰ)</label>
                                    <input type="text" class="form-control" maxlength="100" placeholder="" name="Subtitle3" value="@Model.FirstOrDefault().SubTitle03">
                                </div>
                                <input class="btn btn-primaryt" type="submit" value="Lưu" />
                            </form>
                    </div>

                </div>
            </div>


        </div>
    </div>
</div>
</div>
