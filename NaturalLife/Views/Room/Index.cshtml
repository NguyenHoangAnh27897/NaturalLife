            </div>
        </div>
    </div>
</section>
<!-- main container -->
<main>
    <!-- content with sidebar -->
    <div class="content-with-sidebar common-spacing">
        <div class="container">
            <header class="content-heading hidden-xs hidden-md">
                <h2 class="main-heading">VILLA</h2>
                <strong class="main-subtitle">Nơi nghỉ dưỡng tuyệt vời!</strong>
                <div class="seperator"></div>
            </header>
            <div id="two-columns" class="row">
                <div id="content" class="col-sm-8 col-md-9" ng-controller="listRoom">
                    <div class="filter-option filter-box">
                        <strong class="result-info">179 VILLA</strong>
                        <div class="layout-holder">
                            <div class="layout-action">
                                <a href="#" class="link link-list"><span class="icon-list"></span></a>
                                <a href="#" class="link link-grid active"><span class="icon-grid"></span></a>
                            </div>
                            <div class="select-holder">
                                <div class="select-col">
                                    <select class="filter-select sort-select">
                                        <option value="sort">Sắp xếp</option>
                                        <option value="sort">Mới</option>
                                        <option value="sort">Giá (Thấp đến cao)</option>
                                        <option value="sort">Giá (Cao đến thấp)</option>
                                        <option value="sort">Phổ biến</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="content-holder content-sub-holder tab-content">
                        <div id="villa" class="row db-3-col tab-pane fade in active">
                            @foreach (var item in Model)
                            {
                                <article class="col-md-6 col-lg-4 article has-hover-s1 thumb-full">
                                    <div class="thumbnail">
                                        <div class="img-wrap">
                                            <img src="~/Images/website/imageroom/@item.Avatar" style="height:228px" width="350" alt="image description">
                                        </div>
                                        <h3 class="small-space"><a href="/room/detail/@item.ID">@rs.Where(s => s.ID == item.RoomTypeID).FirstOrDefault().RoomType</a></h3>
                                        <span class="info">@item.RoomName</span>
                                        @*<aside class="meta">
                                            <span class="country">
                                                <span class="icon-family"> </span>3 Người
                                            </span>
                                            <span class="activity">
                                                <span class="icon-acitivities"> </span>6 Hoạt động
                                            </span>
                                        </aside>*@
                                        @if (item.Description.Length > 25)
                                        {
                                            Html.Raw(item.Description.Substring(0, 25));
                                        }
                                        else
                                        {
                                            Html.Raw(item.Description);
                                        }
                                        <a href="/room/detail/@item.ID" class="btn btn-default">Chi tiết</a>
                                        <footer>
                                            <span class="price">Giá: <span>@string.Format("{0:n0}", item.Price)</span></span>
                                            <ul class="social-networks">
                                                <li><a href="#"><span class="icon-twitter"></span></a></li>
                                                <li><a href="#"><span class="icon-google-plus"></span></a></li>
                                                <li><a href="#"><span class="icon-facebook"></span></a></li>
                                                <li><a href="#"><span class="icon-linkedin"></span></a></li>
                                            </ul>
                                        </footer>
                                    </div>
                                </article>
                            }

                        </div>
                        <div id="bungalow" class="row db-3-col tab-pane fade">
