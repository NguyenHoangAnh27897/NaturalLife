@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<NaturalLife.Models.NTL_Room>
@using NaturalLife.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    NaturalLifeEntities db = new NaturalLifeEntities();
    var rs = db.NTL_RoomType.ToList();
}

<!-- main banner -->
<section class="banner banner-inner parallax" data-stellar-background-ratio="0.5" id="banner-layout-leftsidebar">
    <div class="banner-text">
        <div class="center-text">
            <div class="container hidden-md hidden-lg">
                <br />
                <h1 class="text-center">VILLA</h1>
                <strong class="subtitle text-center">Nơi nghỉ dưỡng tuyệt vời!</strong>
