                                            </ul>
                                        </footer>
                                    </div>
                                </article>
                            }

                        </div>
                    </div>
                    <nav class="pagination-wrap pagination-solid">
                        <strong style="margin: 12px;"> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</strong>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </nav>
                </div>
                <!-- sidebar -->
                <aside id="sidebar" class="col-sm-4 col-md-3 sidebar sidebar-list">
                    <div class="sidebar-holder">
                        <header class="heading">
                            <h3>TÌM KIẾM</h3>
                        </header>
                        <!-- accordion filters in sidebar -->
                        <div class="accordion">
                            <div class="accordion-group">
