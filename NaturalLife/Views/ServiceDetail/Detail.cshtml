
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thông tin dịch vụ</li>
                    </ol>
                </nav>
            </div>
        </div>


        <div class="col-lg-12" id="choose">
            <div class="row">
                <h5 class="mb col-lg-2" style="color:white;max-width:10%">Chi tiêt: </h5>
                <select class="form-control col-lg-4" id="opt" name="opt" style="width:15%; margin-left:10px">
                    <option value="info" selected>Thông tin chi tiết</option>
                    <option value="schedule">Lịch trình</option>
                </select>
            </div>
        </div>  
        <br />

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12" id="info">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thông tin dịch vụ</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/roommaster/add" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tên phòng</label>
                                    <input type="text" class="form-control" placeholder="" name="roomname">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Giá</label>
                                    <input class="form-control input-numeral" placeholder="" name="Price" style="width:25%">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlFile1">Hình ảnh đại diện (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 800x600 HOẶC LỚN HƠN)</label>
                                    <br />
                                    <input type="file" name="avatar" accept="image/*" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlFile1">Những hình ảnh hiển thị (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1920x763 HOẶC LỚN HƠN)</label>
                                    <br />
                                    <input type="file" name="images" accept="image/*" multiple="multiple" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Nội dung miêu tả</label>
                                    <textarea name="editor"></textarea>
                                </div>

                                <button class="btn btn-primaryt">Lưu</button>
                            </form>
                        </div>

                    </div>
                </div>

                <div class="col-lg-12" id="schedule" style="display:none">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thông tin dịch vụ</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/roommaster/add" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tên phòng</label>
                                    <input type="text" class="form-control" placeholder="" name="roomname">
                                </div>

                                <button class="btn btn-primaryt">Lưu</button>
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>
<script>
    $("#opt").on("change", function () {
        $("#" + $(this).val()).show().siblings().hide();
        $("#head").show();
        $("#choose").show();
    })
</script>

