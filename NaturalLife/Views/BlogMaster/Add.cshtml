
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Thêm bài viết</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start form -->
        <div class="form-area">
            <div class="row">

                <div class="col-lg-12">
                    <div class="single-form">
                        <div class="section-head">
                            <div class="title">
                                <h4>Thêm bài viết</h4>
                            </div>
                        </div>

                        <div class="section-body">
                            <form action="/blogmaster/add" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Tiêu đề</label>
                                    <input type="text" class="form-control" placeholder="" name="title">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Đăng bởi</label>
                                    <input type="text" class="form-control" placeholder="" name="createdby" style="width:25%">
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlFile1">Hình ảnh đại diện (VUI LÒNG THÊM HÌNH VỚI KÍCH CỠ 1000x800 HOẶC LỚN HƠN)</label>
                                    <br />
                                    <input type="file" name="avatar" accept="image/*" />
                                </div>

                                <div class="form-group">
                                    <label for="exampleFormControlInput4">Nội dung bài viết</label>
                                    <textarea name="editor"></textarea>
                                </div>

                                <button class="btn btn-primaryt">Lưu</button>
                            </form>
                        </div>

                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<script src="~/Content/Webmaster/js/ckeditor/ckeditor.js"></script>
<script src="~/Content/Webmaster/js/ckeditor/samples/js/sample.js"></script>
<script>
    CKEDITOR.replace('editor');
</script>


