@using PagedList.Mvc;
@using GridMvc.Html;
@model PagedList.IPagedList<NaturalLife.Models.NTL_Booking>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<div class="main-wrapper">
    <div class="container">

        <!-- Start breadcrumb section  -->
        <div class="row">
            <div class="col-lg-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/webmaster/index">Trang chủ</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Danh sách Booking</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Start table basic -->
        <div class="basic-table">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-table">
                        <div class="section-head">
                            <div class="title">
                                <h4>Danh sách Booking</h4>
                            </div>
                        </div>
                        <div class="section-body">
                            <div class="table-responsive">
                                <table class="table table-hover progress-table text-white text-center" border="0" style="border-width:0px;border-style:None;border-collapse:collapse;">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Tên khách hàng</th>
                                            <th>SĐT</th>
                                            <th>Loại phòng</th>
                                            <th>Số người lớn</th>
                                            <th>Số trẻ em</th>
                                            <th>Phương tiện</th>
                                            <th>Ngày bắt đầu</th>
                                            <th>Ngày kết thúc</th>
                                            <th>Dịch vụ</th>
                                            <th>Hoạt động</th>
                                            <th>Xoá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Fullname</td>
                                            <td>@item.Phone</td>
                                            <td>@item.RoomType</td>
                                            <td>@item.NumberOfAdult</td>
                                            <td>@item.NumberOfChild</td>
                                            <td>@item.VehicleTye</td>
                                            <td>@item.StartDate</td>
                                            <td>@item.EndDate</td>
                                            <td>@item.ServiceID</td>
                                            <td>@item.ActivityID</td>
                                            <td><a href="/booking/delete/@item.ID"><img src="~/Images/webmaster/icon/if_f-cross_256_282471.png" /></a></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="pagination-total-pages">
                                    <div class="pagination-style">
                                        <strong style="margin: 12px;"> Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount</strong>
                                        @Html.PagedListPager(Model, page => Url.Action("ListProduct", new { page }))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


